<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:strokeColor="#FA0202"
        app:strokeWidth="2dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/raw_risk_name"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:hint="NOM"/>

            <TextView
                android:id="@+id/raw_risk_age"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#9A0B0B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:hint="30"/>


            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="ans"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Symptome(s):"
            android:layout_marginTop="37dp"/>

        <TextView
            android:id="@+id/raw_risk_symptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="57dp"
            android:textColor="#F40202"
            android:textSize="14sp"
            android:textStyle="italic"
            android:hint="Fievre, toux, tremblements,..."/>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>

